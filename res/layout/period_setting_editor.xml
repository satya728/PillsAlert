<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    
    <TextView 
      android:id="@+id/period_editor_title_label"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Period Title"
    />
    <EditText
       android:id="@+id/period_editor_title"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       
    />
    <TextView 
        android:id="@+id/period_editor_time_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Period Time"
    />
    <TimePicker
        android:id="@+id/period_editor_time_pick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
    />
    <Button
        android:id="@+id/period_editor_save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:text="Save Period"         
    />
</LinearLayout>
